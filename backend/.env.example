# Server Configuration
NODE_ENV=development
PORT=8080

# Google Cloud Project
GCP_PROJECT_ID=lokolo-platform
GCP_REGION=africa-south1

# Cloud SQL Connection
# Option 1: Using Cloud SQL Proxy (recommended for local development)
# DB_HOST=localhost
# DB_PORT=5432

# Option 2: Direct connection to Cloud SQL (production)
# DB_HOST=<CLOUD_SQL_PUBLIC_IP>
# DB_PORT=5432

DB_HOST=localhost
DB_PORT=5432
DB_NAME=lokolo
DB_USER=postgres
DB_PASSWORD=your_db_password_here

# Firebase
FIREBASE_PROJECT_ID=lokolo-platform
FIREBASE_SERVICE_ACCOUNT_KEY_PATH=./firebase-service-account.json

# Cloud Storage
STORAGE_BUCKET=lokolo-platform.appspot.com

# API Configuration
API_VERSION=v1
ALLOWED_ORIGINS=http://localhost:3000,https://lokolo.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
